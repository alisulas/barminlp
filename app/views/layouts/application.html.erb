<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= stylesheet_link_tag    'application', media: 'all',
                                              'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= render 'layouts/shim' %>
  </head>
  


  <body>
    
    
    <header id="header">
    
        <%= render 'layouts/nav' %>
        <%= render partial: "layouts/header" if current_page?('/')  %>
    </header>
    
    
    <section id="content">
      <div class="container">
        <%= yield %>
      </div>
    </section>
    
    <footer id="footer">
      <div class="container-fluid">
        <%= render 'layouts/footer' %>
      </div>
    </footer>
  </body>







</html>